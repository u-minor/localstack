{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/java:1": {
			"version": "21.0.3-tem"
		},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/sshd:1": {}
	},
	"mounts": [
		{
			"source": "${localWorkspaceFolderBasename}-venv",
			"target": "${containerWorkspaceFolder}/.venv",
			"type": "volume"
		},
		{
			"source": "${localEnv:HOME}/.config/gh",
			"target": "/home/vscode/.config/gh",
			"type": "bind"
		}
	],
	"onCreateCommand": ".devcontainer/scripts/onCreate.sh",
	"postCreateCommand": ".devcontainer/scripts/postCreate.sh",
	"remoteEnv": {
		"CONTAINER_WORKSPACE_FOLDER": "${containerWorkspaceFolder}",
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
		"OVERRIDE_IN_DOCKER": "false"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff",
				"ms-vscode.makefile-tools"
			],
			"settings": {
				"[python]": {
					"editor.defaultFormatter": "charliermarsh.ruff"
				},
				"python.testing.pytestArgs": [
					"tests/aws",
					"tests/unit"
				],
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true
			}
		}
	}
}